<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_login"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:textColor="@color/white"
            android:paddingLeft="30dp"
            android:textSize="35dp"
            android:text="Email Verification"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_below_welcome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_welcome"
            android:paddingLeft="30dp"
            android:text="Please Verify In to continue"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify OTP"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="horizontal"
            android:weightSum="115">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/et_pin1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:gravity="center_horizontal|center_vertical"
                android:hint="*"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/textColor2"
                android:textSize="18dp"
                android:textStyle="bold"
                android:imeOptions="actionNext"
                android:background="@drawable/bg_otp_edit_tab"
                android:elevation="4dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"/>

            <EditText
                android:id="@+id/et_pin2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:gravity="center_horizontal|center_vertical"
                android:hint="*"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/textColor2"
                android:textSize="18dp"
                android:textStyle="bold"
                android:imeOptions="actionNext"
                android:background="@drawable/bg_otp_edit_tab"
                android:elevation="4dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"/>

            <EditText
                android:id="@+id/et_pin3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:gravity="center_horizontal|center_vertical"
                android:hint="*"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/textColor2"
                android:textSize="18dp"
                android:textStyle="bold"
                android:imeOptions="actionNext"
                android:background="@drawable/bg_otp_edit_tab"
                android:elevation="4dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"/>

            <EditText
                android:id="@+id/et_pin4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:gravity="center_horizontal|center_vertical"
                android:hint="*"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/textColor2"
                android:textSize="18dp"
                android:textStyle="bold"
                android:imeOptions="actionDone"
                android:background="@drawable/bg_otp_edit_tab"
                android:elevation="4dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"/>

            <EditText
                android:id="@+id/et_pin5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:gravity="center_horizontal|center_vertical"
                android:hint="*"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/textColor2"
                android:textSize="18dp"
                android:textStyle="bold"
                android:imeOptions="actionNext"
                android:background="@drawable/bg_otp_edit_tab"
                android:elevation="4dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"/>

            <EditText
                android:id="@+id/et_pin6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:gravity="center_horizontal|center_vertical"
                android:hint="*"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/textColor2"
                android:textSize="18dp"
                android:textStyle="bold"
                android:imeOptions="actionNext"
                android:background="@drawable/bg_otp_edit_tab"
                android:elevation="4dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


        </LinearLayout>

    <TextView
        android:id="@+id/registration_resend_otp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="Resend"
        android:textSize="12sp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="300dp"
        android:textColor="@color/gold_yellow"
        android:textStyle="bold"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="100dp"
        android:layout_height="30dp"
        style="@style/AppButton_Done"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/black"
        android:text="Verify"
        android:textSize="18dp"
        android:textStyle="normal"
        android:singleLine="true"
        android:maxLines="1"
        android:textAllCaps="false"/>








</LinearLayout>
