<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ResetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:elevation="3dp"
        android:layout_gravity="center"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/white_box"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset password"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />


        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />



        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Password"
        android:gravity="left"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_curvy_tab_edittext"
        android:elevation="3dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/profile_password_cr"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:background="@null"
            android:hint="current password"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:textStyle="bold"
            android:lines="1" />

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_curvy_tab_edittext"
            android:elevation="3dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/profile_password_new"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:background="@null"
                android:hint="new password"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lines="1" />

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_curvy_tab_edittext"
            android:elevation="3dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/profile_password_confirm"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:background="@null"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:hint="confirm password"
                android:textStyle="bold"
                android:lines="1" />

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reset_password"
            style="@style/AppButton_Done_green"
            android:layout_height="30dp"
            android:layout_width="120dp"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Done"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp" />




    </LinearLayout>

</LinearLayout>