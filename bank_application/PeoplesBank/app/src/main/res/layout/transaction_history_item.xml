<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#E5E5E5"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/history_status"
                android:layout_marginStart="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/outgoing_arrow"/>
            <View
                android:layout_width="25dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tras_account_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Transaction 1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/trans_his_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2001-09-07"
                    android:textStyle="bold"
                    android:textSize="14sp"/>



            </LinearLayout>

            <View
                android:layout_width="25dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textSize="20sp"
                    android:lines="1"
                    android:text="Rs.25000.00"
                    android:textStyle="bold"
                    android:textColor="@color/wave_maroon"/>


            </LinearLayout>







        </LinearLayout>






    </RelativeLayout>

</LinearLayout>