<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="100"
    android:orientation="vertical">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_login"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:textColor="@color/white"
            android:paddingLeft="30dp"
            android:textSize="35dp"
            android:text="Online Registration"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_below_welcome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_welcome"
            android:paddingLeft="30dp"
            android:text="Please Register to continue"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_weight="60"
        android:orientation="vertical"
        android:weightSum="100">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From Account"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_curvy_tab_edittext"
                android:elevation="3dp"
                android:layout_gravity="center">
                <Spinner
                    android:id="@+id/sp_accounts"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Number"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_curvy_tab_edittext"
                android:elevation="3dp"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/et_toAccount"
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:background="@null"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:hint="account number"
                    android:lines="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Identity Type"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_curvy_tab_edittext"
                android:elevation="3dp"
                android:layout_gravity="center">
                <Spinner
                    android:id="@+id/re_id_type"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID Number"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_curvy_tab_edittext"
                android:elevation="3dp"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/re_id_number"
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:background="@null"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:hint="account number"
                    android:lines="1" />

            </LinearLayout>





        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_transaction1_next"
            style="@style/AppButton_Done"
            android:layout_height="30dp"
            android:maxLines="1"
            android:singleLine="true"
            android:text="continue"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Already have an account?"
            android:textColor="@color/hint_text_color"
            android:textSize="12sp"
            android:textStyle="bold" />










    </LinearLayout>


</LinearLayout>